{
	"compilerOptions": {
		"target": "es2022",
		"module": "node16",
		"composite": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"lib": ["ES2022", "DOM"],
		"moduleResolution": "node16",
		"rootDir": ".",
		"outDir": "build",
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"alwaysStrict": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"strictNullChecks": false,
		"baseUrl": ".",
		"paths": {
			"@cli/*": ["apps/cli/*"],
			"@server/*": ["apps/server/*"],
			"@config": ["libs/config/index"],
			"@llm": ["libs/llm/index"],
			"@prompt-cli": ["libs/prompt-cli/index"],
			"@operations": ["libs/operations/index"],
			"@common": ["libs/common/index"],
			"@routines": ["packages/routines/index"],
			"@adapters": ["packages/adapters/index"]
		}
	},
	"include": ["apps/**/*", "packages/**/*", "tools/**/*", "test/**/*", "libs/**/*", "scripts/**/*", "data/**/*"]
}
